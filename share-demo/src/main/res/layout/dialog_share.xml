<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/share_qqzone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_share_qqzone"
        />

    <ImageView
        android:id="@+id/share_weibo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_share_sina"
        />

    <ImageView
        android:id="@+id/share_wechat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_share_wx"
        />

    <ImageView
        android:id="@+id/share_moments"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_share_wxgroup"
        />
</LinearLayout>